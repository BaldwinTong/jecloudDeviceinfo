@import 'vxe-table/styles/variable.scss';

$vxe-primary-color: <%= primaryColor %>;// 主题色
$component-background: #fff;// 基础背景
$vxe-table-row-hover-bg: #fafafa; // 悬浮背景

$vxe-table-row-checked-bg:<%= primaryColor1 %>;// 选中背景
$vxe-table-row-checked-hover-bg: darken($vxe-table-row-checked-bg, 2%);// 选中悬浮背景

// 选中
$vxe-table-row-radio-checked-background-color: $vxe-table-row-checked-bg;
$vxe-table-row-checkbox-checked-background-color: $vxe-table-row-checked-bg;
// 悬浮
$vxe-table-row-hover-background-color: $vxe-table-row-hover-bg;
$vxe-table-row-hover-striped-background-color: $vxe-table-row-hover-bg;
$vxe-table-row-hover-radio-checked-background-color: $vxe-table-row-checked-hover-bg;
$vxe-table-row-hover-checkbox-checked-background-color: $vxe-table-row-checked-hover-bg;
